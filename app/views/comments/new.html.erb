<h2 style="text-align: center">Add a comment:</h2>
<br>
<br>
<div class="new_post_box" style="display: flex; flex-direction: row; justify-content: center">
  <div class="comment-styling">
    <%= form_with model: @comment, url: post_comments_path(@post), local: true do |form| %>
      
      <p>
        <%= form.label :text %><br>
        <%= form.text_area :text %>
      </p>
      <p>
        <%= form.submit %>
      </p>
    <% end %>
  </div>
</div>