<h1> Hello! Welcome to Jem Photo Share! </h1>

<% flash.each do |type, msg| %>
    <div class="alert alert-info">
      <%= msg %>
    </div>
  <% end %>
<%= link_to 'Upload new post', new_post_path %>
<% if @posts.present? %>
  <% @posts.reverse.each do |post| %>
    <li>
      <%= post.title %>
        <% if post.image.present? %>  
          <%= image_tag post.image.url(:medium) %>
        <% end %>

      <%= link_to "Delete This Post", post_path(post), method: :delete, 
      data: { confirm: 'Are you sure?' } %>
      <%= button_to "See comments", post_path(post), method: :get %>
      <%= button_to "Make comments", new_post_comment_path(post), method: :get %>
      

    </li>
  <% end %>   

<% end %>     