<h1> Hello! Welcome to Jem Photo Share! </h1>

<% flash.each do |type, msg| %>
    <div class="alert alert-info">
      <%= msg %>
    </div>
  <% end %>
<%= link_to 'Upload new post', new_post_path %>
<% if @posts.present? %>
  <% @posts.reverse.each do |post| %>
    <li>
      <%= post.title %>
      <%= button_to "To make comments of this post", new_post_comment_path(post), method: :get %>
      <%= button_to "To see all comments of this post", post_path(post), method: :get %>
      <%= button_to "Delete This Post", post_path(post), method: :delete, 
      data: { confirm: 'Are you sure?' } %>

    </li>
  <% end %>   

<% end %>     